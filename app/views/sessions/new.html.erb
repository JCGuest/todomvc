<section class="todoapp">
	<header class="header">
		<h1>Login</h1>
		<%= form_tag(sessions_path) do %>
        <%= text_field_tag :email, '', :class => "new-todo", placeholder: "Log in with your email" %>
        <% end %>
	</header>
</section>
<footer class="info">
    <p>
        <h2><%= link_to "New? Sign up!", new_user_path %></h2>
    </p>
</footer>