<section class="todoapp">
	<header class="header">
		<h1>todo-lists</h1>
		<%= form_for @list do |f| %>
				<%= f.text_field :name, placeholder: @list.errors.full_messages_for(:name).first || "make a new list...", class: "new-todo" %>
		<%end %>
	</header>

	<section class="main">
    	<ul class="todo-list">
        <% @lists.each do |list| %>
            <li>
                <div class="view">
                    <label><%= link_to list.name, list_path(list.id) %></label>
                </div>    
            </li>
            <%end %>
        </ul>    
	</section>

</section>
